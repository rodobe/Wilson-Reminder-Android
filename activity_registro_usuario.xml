<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesus.wilsonreminder2.RegistroUsuario">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tittleRegistrar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/WilsonVinotinto"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Registrarse"
            app:titleMarginStart="135dp" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/contenedorRegistro"
        layout="@layout/content_registro_usuario" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="100dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:text="Nombre"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txtApellido1"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginVertical="150dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:text="Primer Apellido"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="61dp" />

    <EditText
        android:id="@+id/txtApellido2"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginVertical="200dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:text="Segundo Apellido"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="61dp" />

    <EditText
        android:id="@+id/txtFechaNacimiento"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="date"
        android:text="Fecha de Nacimiento"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/txtContrase単aReg"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="200dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:text="Contrase単a"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txtContrase単aRegConfirm"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="150dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:text="Confirmar Contrase単a"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="70dp"
        android:backgroundTint="@color/SubrayadoWilson"
        android:onClick="registrado"
        android:text="Registrar" />

</android.support.design.widget.CoordinatorLayout>
